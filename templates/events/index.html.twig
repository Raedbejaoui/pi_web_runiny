{% extends 'index.html.twig' %}

{% block title %}Events index{% endblock %}

{% block body %}
    <h1>Events index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date evenement</th>
                <th>Description </th>
                <th>Nom</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.dateeven ? event.dateeven|date('Y-m-d') : '' }}</td>
                <td>{{ event.descri }}</td>
                <td>{{ event.nom }}</td>
                <td>{{ event.prix }}</td>
                <td>
                    <a href="{{ path('app_events_show', {'ideven': event.ideven}) }}">show</a>
                    <a href="{{ path('app_events_edit', {'ideven': event.ideven}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_events_new') }}">Create new</a>
{% endblock %}
